<?xml version="1.0" encoding="UTF-8"?>
<chrome>

    <media>
        <type>video</type>
        <assetID>936656</assetID>
    </media>

    <settings>
        <source>tivi_videothek</source>
        <tracking>
            <source>tivi</source>
            <context>intern</context>
        </tracking>
        <backgroundColor>0x000000</backgroundColor>
        <embedTypes>flash,html5</embedTypes>
        <smoothing>true</smoothing>
        <initialBufferTime>2</initialBufferTime>
        <expandedBufferTime>10</expandedBufferTime>
        <hdsBufferTime>3</hdsBufferTime>
        <cookieID>changeMe0815</cookieID>
        <scaleMode>letterbox</scaleMode>
        <videoClickPlayToggle>true</videoClickPlayToggle>
        <adaptive>
            <normalScreenMaxAdaptiveIndex>5</normalScreenMaxAdaptiveIndex>
            <liveMaxAdaptiveIndex>-1</liveMaxAdaptiveIndex>
            <vodMaxAdaptiveIndex>-1</vodMaxAdaptiveIndex>
            <initialAdaptiveIndex>4</initialAdaptiveIndex>
        </adaptive>
        <dvrEnabled>true</dvrEnabled>
        <loop>false</loop>
        <autoPlay>true</autoPlay>
        <autoHideDelay>2000</autoHideDelay>
        <initialQuality>veryhigh</initialQuality>
        <qualities>
            <quality fromBitrate="60000" toBitrate="160000" quality="low" label="Niedrig (Modem oder ISDN)" />
            <quality fromBitrate="500000" toBitrate="700000" quality="high" label="Hoch (DSL 1000)" />
            <quality fromBitrate="1650000" toBitrate="1750000" quality="veryhigh" label="Sehr Hoch (DSL 3000)" />
            <quality fromBitrate="2500000" toBitrate="3500000" quality="hd" label="High Definition - HD (DSL 6000+)" />
        </qualities>
    </settings>

    <services>
        <!--<service key="article" type="tivi_videothek" params="ak=web"><![CDATA[example/assets/testdata/tivi_videothek_beitrag.xml]]></service>-->
        <service key="article" type="tivi_videothek" params="view=flashXml"><![CDATA[http://www.zdf.de/tiviVideos/beitrag/pur%2B+Sendungen/895212/]]></service>
        <service key="recommend" type="mediathek" params="ak=web"><![CDATA[example/assets/testdata/trenner.xml]]></service>
        <service key="vqm" type="mediathek" params=""><![CDATA[http://vqm.zdf.de/conf/zdfplayer/1.2/mediathek/vqm.xml]]></service>
    </services>

    <dictionary>
        <!-- Allgemeine Texte -->
        <entry key="airDatePrefix"><![CDATA[Sendedatum: ]]></entry>
        <entry key="expirydatePrefix"><![CDATA[Online sichtbar bis: ]]></entry>
        <entry key="broadcastPrefix"><![CDATA[Sendung: ]]></entry>
        <entry key="error"><![CDATA[Fehler]]></entry>
        <entry key="information"><![CDATA[Hinweis]]></entry>
        <entry key="buffer"><![CDATA[Puffer]]></entry>
        <!-- Allgemeine Fehlermeldungen -->
        <entry key="commonError"><![CDATA[Es ist ein allgemeiner Fehler aufgetreten.]]></entry>
        <entry key="compatibilityError"><![CDATA[Leider unterstützt Ihr Browser keine aktuelle Videotechnologie.]]></entry>
        <entry key="missingVideo"><![CDATA[Es konnte keine Videodatei ermittelt werden]]></entry>
        <!-- Fehler und Info Meldungen Weiterempfehlen Dialog -->
        <entry key="mailSuccess"><![CDATA[Ihre Empfehlung wurde erfolgreich versendet.]]></entry>
        <entry key="mailFailure"><![CDATA[Beim Versenden Ihrer Empfehlung ist ein Fehler aufgetreten. Bitte versuchen Sie es zu einem späteren Zeitpunkt noch einmal.]]></entry>
        <entry key="messageEmpty"><![CDATA[Bitte geben Sie eine Nachricht ein.]]></entry>
        <entry key="receiverAdressInvalid"><![CDATA[Bitte geben Sie eine gültige Empfängeradresse ein.]]></entry>
        <entry key="senderAdressInvalid"><![CDATA[Bitte geben Sie eine gültige Absenderadresse ein.]]></entry>
        <!-- HTML5 Video Fehler Meldungen -->
        <entry key="MEDIA_ERR_ABORTED"><![CDATA[You aborted the video playback.]]></entry>
        <entry key="MEDIA_ERR_NETWORK"><![CDATA[A network error caused the video download to fail part-way.]]></entry>
        <entry key="MEDIA_ERR_DECODE"><![CDATA[The video playback was aborted due to a corruption problem or because the video used features your browser did not support.]]></entry>
        <entry key="MEDIA_ERR_SRC_NOT_SUPPORTED"><![CDATA[The video could not be loaded, either because the server or network failed or because the format is not supported.]]></entry>
        <!-- Fehler Meldungen Schnittstellen Kommunikation -->
        <entry key="commonError"><![CDATA[Es ist ein Fehler aufgetreten!]]></entry>
        <entry key="ajaxError"><![CDATA[Fehler bei der Datenübertragung!]]></entry>
        <entry key="dataMissing"><![CDATA[Die Informationen zur Medienermittlung sind unvollständig!]]></entry>
        <entry key="notFound"><![CDATA[Zu diesem Beitrag liegen keine Videos vor]]></entry>
        <entry key="notVisible"><![CDATA[Dieser Beitrag ist leider nicht sichtbar]]></entry>
        <entry key="notVisibleAnymore"><![CDATA[Dieser Beitrag ist leider nicht mehr sichtbar]]></entry>
        <entry key="fsk"><![CDATA[Dieser Beitrag ist mit FSK belegt]]></entry>
        <entry key="geolocation"><![CDATA[Dieser Beitrag ist mit Geolocation belegt]]></entry>
        <entry key="wrongParameter"><![CDATA[Dieser Beitrag existiert leider nicht]]></entry>
        <!-- Flash OSMF Fehler Meldungen -->
    </dictionary>

    <!-- plug-ins -->

    <plugins baseURL="flash/plugins/">
        <plugin url="ZDFSMILPlugin.swf"/>
        <plugin url="IVWTrackingPlugin.swf"/>
        <plugin url="CaptioningPlugin.swf"/>
    </plugins>

    <plugins baseURL="flash/plugins/" profileName="akamai_vod_rtmp">
        <plugin url="AkamaiBasicStreamingPlugin.swf"/>
    </plugins>

    <plugins baseURL="flash/plugins/" profileName="akamai_live_rtmp" includesProfile="akamai_vod_rtmp" />

    <plugins baseURL="flash/plugins/" profileName="akamai_live_hds">
        <plugin url="AkamaiAdvancedStreamingPlugin.swf"/>
    </plugins>

    <!-- flash assets -->

    <assets baseURL="example/assets/flash/">
        <asset id="loader" type="flashSymbol" url="spinner.swf" symbol="SpinningLoader" />
    </assets>

    <!-- image assets -->

    <assets baseURL="example/assets/images/">

        <asset id="panel" type="bitmapFile" url="panel_background.png" scale9="11,34,234,148" width="254" height="191" offsetX="0" offsetY="0" />
        <asset id="caption" type="bitmapFile" url="spritesheet.png" scale9="2,2,15,15" width="19" height="19" offsetX="154" offsetY="228" />
        <asset id="bar" type="bitmapFile" url="spritesheet.png" scale9="2,2,18,13" width="22" height="17" offsetX="223" offsetY="242" />
        <asset id="empty" type="bitmapFile" url="spritesheet.png" width="1" height="1" offsetX="254" offsetY="0" />

        <asset id="loaderAnimation" type="bitmapFile" url="loader.gif" />

        <asset id="closeUp" type="bitmapFile" url="spritesheet.png" width="24" height="23" offsetX="0" offsetY="192" />
        <asset id="closeDown" type="bitmapFile" url="spritesheet.png" width="24" height="23" offsetX="25" offsetY="192" />
        <asset id="closeDisabled" type="bitmapFile" url="spritesheet.png" width="24" height="23" offsetX="50" offsetY="192" />

        <asset id="playUp" type="bitmapFile" url="spritesheet.png" width="38" height="25" offsetX="150" offsetY="0" />
        <asset id="playDown" type="bitmapFile" url="spritesheet.png" width="38" height="25" offsetX="150" offsetY="25" />
        <asset id="playDisabled" type="bitmapFile" url="spritesheet.png" width="38" height="25" offsetX="150" offsetY="50" />
        <asset id="pauseUp" type="bitmapFile" url="spritesheet.png" width="38" height="25" offsetX="150" offsetY="75" />
        <asset id="pauseDown" type="bitmapFile" url="spritesheet.png" width="38" height="25" offsetX="150" offsetY="100" />
        <asset id="pauseDisabled" type="bitmapFile" url="spritesheet.png" width="38" height="25" offsetX="150" offsetY="125" />

        <asset id="overlayPlayUp" type="bitmapFile" url="spritesheet.png" width="32" height="32" offsetX="188" offsetY="0" />
        <asset id="overlayPlayDown" type="bitmapFile" url="spritesheet.png" width="32" height="32" offsetX="188" offsetY="33" />
        <asset id="overlayPlayDisabled" type="bitmapFile" url="spritesheet.png" width="32" height="32" offsetX="188" offsetY="66" />

        <asset id="muteUp" type="bitmapFile" url="spritesheet.png" width="24" height="23" offsetX="0" offsetY="96" />
        <asset id="muteDown" type="bitmapFile" url="spritesheet.png" width="24" height="23" offsetX="25" offsetY="96" />
        <asset id="muteDisabled" type="bitmapFile" url="spritesheet.png" width="24" height="23" offsetX="50" offsetY="96" />
        <asset id="muteSelectedUp" type="bitmapFile" url="spritesheet.png" width="24" height="23" offsetX="75" offsetY="96" />
        <asset id="muteSelectedDown" type="bitmapFile" url="spritesheet.png" width="24" height="23" offsetX="100" offsetY="96" />
        <asset id="muteSelectedDisabled" type="bitmapFile" url="spritesheet.png" width="24" height="23" offsetX="125" offsetY="96" />

        <asset id="fullScreenEnterUp" type="bitmapFile" url="spritesheet.png" width="24" height="23" offsetX="0" offsetY="48" />
        <asset id="fullScreenEnterDown" type="bitmapFile" url="spritesheet.png" width="24" height="23" offsetX="25" offsetY="48" />
        <asset id="fullScreenEnterDisabled" type="bitmapFile" url="spritesheet.png" width="24" height="23" offsetX="50" offsetY="48" />
        <asset id="fullScreenLeaveUp" type="bitmapFile" url="spritesheet.png"  width="24" height="23" offsetX="75" offsetY="48" />
        <asset id="fullScreenLeaveDown" type="bitmapFile" url="spritesheet.png" width="24" height="23" offsetX="100" offsetY="48" />
        <asset id="fullScreenLeaveDisabled" type="bitmapFile" url="spritesheet.png" width="24" height="23" offsetX="125" offsetY="48" />

        <asset id="volumeSliderThumbUp" type="bitmapFile" url="spritesheet.png" width="16" height="17" offsetX="221" offsetY="205" />
        <asset id="volumeSliderThumbDown" type="bitmapFile" url="spritesheet.png" width="16" height="17" offsetX="239" offsetY="205" />
        <asset id="volumeSliderThumbDisabled" type="bitmapFile" url="spritesheet.png" width="16" height="17" offsetX="221" offsetY="224" />

        <asset id="volumeSliderTrack" type="bitmapFile" url="spritesheet.png" scale9="2,2,74,2" width="78" height="6" offsetX="150" offsetY="260" />
        <asset id="volumeSliderProgressTrack" type="bitmapFile" url="spritesheet.png"  width="78" height="6" offsetX="150" offsetY="276" />

        <asset id="scrubBarTrack" type="bitmapFile" url="spritesheet.png" scale9="2,2,68,4" width="72" height="8" offsetX="150" offsetY="260" />
        <asset id="scrubBarProgressTrack" type="bitmapFile" url="spritesheet.png" scale9="2,2,68,4" width="72" height="8" offsetX="150" offsetY="251" />

        <asset id="scrubberUp" type="bitmapFile" url="spritesheet.png" width="37" height="17" offsetX="219" offsetY="150" />
        <asset id="scrubberDown" type="bitmapFile" url="spritesheet.png" width="37" height="17" offsetX="219" offsetY="168" />
        <asset id="scrubberDisabled" type="bitmapFile" url="spritesheet.png" width="37" height="17" offsetX="219" offsetY="186" />

    </assets>

    <!-- font assets -->
    <assets baseURL="example/assets/fonts/">
        <asset id="defaultFont" type="fontSymbol" color="0xFFFFFF" url="fonts.swf"
               symbol="Verdana" fontFamily="Verdana,Helvetica,Arial,sans-serif" fontSize="11"/>
        <asset id="tooltipFont" type="fontSymbol" color="0x000000" url="fonts.swf"
               symbol="Verdana" fontFamily="Verdana,Helvetica,Arial,sans-serif" fontSize="11"/>
        <asset id="footNote" type="fontSymbol" color="0xAFAFAF" url="fonts.swf"
               symbol="Verdana" fontFamily="Verdana,Helvetica,Arial,sans-serif" fontSize="9"/>
        <asset id="captionFont" type="fontSymbol" color="0xFFFFFF" url="fonts.swf"
               symbol="Verdana" fontFamily="Verdana,Helvetica,Arial,sans-serif" fontSize="16"/>
    </assets>

    <!-- widgets -->
    <widgets>

        <!-- Start Image -->
        <widget
                id="startImage"
                type="startImage"
                hideImageWhilePlayback="true"
                percentWidth="100"
                percentHeight="100"
                imagePercentWidth="100"
                imagePercentHeight="100"
                />
        <!-- Ende Start Image -->

        <!-- Buffering Notifier -->

        <widget
                id="bufferNotifier"
                type="bufferNotifier"
                percentWidth="100"
                percentHeight="100"
                loader="loader"
                animation="loaderAnimation"
                />

        <!-- Ende Buffering Notifier -->

        <!-- Tooltips -->

        <widget
                id="tooltip"
                type="tooltip"
                borderColor="0x000000"
                borderThickness="1"
                backgroundColor="0xFFFFE1"
                font="tooltipFont"
                maxWidth="200"
                delay="500"
                />

        <!-- Ende tooltips -->

        <!-- Overlay PlayButton -->

        <widget
                id="overlayPlayButton"
                type="overlayPlayButton"
                upFace="overlayPlayUp"
                downFace="overlayPlayDown"
                disabledFace="overlayPlayDisabled"
                buttonMode="true"
                left="0"
                right="0"
                top="45"
                bottom="45"
                />

        <!-- Ende Overlay Play Button -->

        <!-- Controlbar -->

        <widget
                id="controlBar"
                face="bar"
                percentWidth="100"
                height="31"
                horizontalAlign="center"
                bottom="0"
                autoHide="false"
                fadeSteps="7"
                >

            <!-- Linker Controlbar Bereich -->

            <widget
                    id="controlBarLeft"
                    layoutMode="horizontal"
                    left="5"
                    percentHeight="100"
                    >

                <widget
                        id="playPauseButton"
                        type="playPauseButton"
                        top="4"
                        upFace="playUp"
                        downFace="playDown"
                        disabledFace="playDisabled"
                        selectedUpFace="pauseUp"
                        selectedDownFace="pauseDown"
                        selectedDisabledFace="pauseDisabled"
                        buttonMode="true"
                        tooltip="Play/Pause"
                        />

            </widget>

            <!-- Ende Linker Controlbar Bereich -->

            <!-- Rechter Controlbar Bereich -->

            <widget
                    id="controlBarRight"
                    layoutMode="horizontal"
                    verticalAlign="middle"
                    percentHeight="100"
                    right="5"
                    >

                <widget
                        id="timeField"
                        type="timeField"
                        displayMode="elapsedDuration"
                        verticalAlign="middle"
                        />

                <widget width="8" />

                <widget
                        id="volumeButton"
                        type="volumeButton"
                        verticalAlign="middle"
                        upFace="muteUp"
                        downFace="muteDown"
                        disabledFace="muteDisabled"
                        selectedUpFace="muteSelectedUp"
                        selectedDownFace="muteSelectedDown"
                        selectedDisabledFace="muteSelectedDisabled"
                        tooltip="Laustärkeregelung"
                        sliderHeight="55"
                        sliderWidth="24"
                        sliderBackgroundColor="0x111111"
                        sliderBackgroundAlpha="0.6"
                        thumbUp="volumeSliderThumbUp"
                        thumbDown="volumeSliderThumbDown"
                        thumbDisabled="volumeSliderThumbDisabled"
                        track="volumeSliderTrack"
                        progressTrack="volumeSliderProgressTrack"
                        value="0.75"
                        />

                <widget width="2" />

                <widget
                        id="fullScreenButton"
                        type="fullScreenButton"
                        verticalAlign="middle"
                        upFace="fullScreenEnterUp"
                        downFace="fullScreenEnterDown"
                        disabledFace="fullScreenEnterDisabled"
                        selectedUpFace="fullScreenLeaveUp"
                        selectedDownFace="fullScreenLeaveDown"
                        selectedDisabledFace="fullScreenLeaveDisabled"
                        buttonMode="true"
                        tooltip="Vollbild"
                        />

            </widget>

            <!-- Ende Rechter Controlbar Bereich -->

            <!-- Scrubbar -->

            <widget
                    id="scrubBar"
                    type="scrubBar"
                    showTimeFields="false"
                    left="50"
                    right="145"
                    height="17"
                    scrubberUp="scrubberUp"
                    scrubberDown="scrubberDown"
                    scrubberDisabled="scrubberDisabled"
                    track="scrubBarTrack"
                    progressTrack="scrubBarProgressTrack"
                    showDataTip="true"
                    immediateScrubbing="false"
                    dataTipMode="elapsedDuration"
                    verticalAlign="middle"
                    />

            <!-- Ende Scrubbar -->

        </widget>

        <!-- Ende Controlbar -->

        <!-- Loader Animation -->

        <widget
                id="loaderAnimation"
                type="loaderAnimation"
                horizontalAlign="center"
                verticalAlign="middle"
                />

        <!-- Ende Loader Animation -->

        <!-- Alert Dialog -->

        <widget
                id="alert"
                type="alert"
                face="panel"
                width="250"
                height="140"
                verticalAlign="middle"
                horizontalAlign="center"
                fadeSteps="6"
                dropShadow="true"
                >

            <widget
                    id="captionLabel"
                    type="label"
                    top="12"
                    left="15"
                    right="10"
                    height="18"
                    fontSize="14"
                    />

            <widget
                    id="messageLabel"
                    type="label"
                    top="44"
                    left="15"
                    right="15"
                    bottom="10"
                    multiline="true"
                    selectable="true"
                    />

            <widget
                    id="closeButton"
                    type="button"
                    upFace="closeUp"
                    downFace="closeDown"
                    disabledFace="closeDisabled"
                    right="10"
                    top="10"
                    tooltip="Meldung schliessen"
                    />

        </widget>

        <!-- Ende Alert Dialog -->

    </widgets>

</chrome>